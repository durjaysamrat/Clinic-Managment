package com.app.service;
import com.app.repo.AdminUserRepository;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import java.util.List;
import java.util.Optional;
//Service Layer
@Service
class AdminUserService {
 @Autowired
 private AdminUserRepository repository;

 public List<AdminUser> getAllUsers() { return repository.findAll(); }
 public AdminUser addUser(AdminUser user) { return repository.save(user); }
 public AdminUser updateUser(Long id, AdminUser user) {
     user.setId(id);
     return repository.save(user);
 }
 public void deleteUser(Long id) { repository.deleteById(id); }
}