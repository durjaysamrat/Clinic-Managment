package com.app.service;

import com.app.repo.ReportRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.HashMap;
import java.util.Map;

@Service
public class ReportService {

    @Autowired
    private ReportRepository reportRepository;

    public Map<String, Object> generateClinicOperationsReport() {
        Map<String, Object> report = new HashMap<>();
        report.put("totalPatients", reportRepository.countPatients());
        report.put("appointmentsPerDay", reportRepository.getAppointmentsPerDay());
        report.put("commonConditions", reportRepository.getCommonConditions());
        return report;
    }

    public Map<String, Object> generateFinancialStatisticsReport() {
        Map<String, Object> report = new HashMap<>();
        report.put("totalRevenue", reportRepository.calculateTotalRevenue());
        report.put("dailyEarnings", reportRepository.getDailyEarnings());
        return report;
    }

    public Map<String, Object> generateStaffProductivityReport() {
        Map<String, Object> report = new HashMap<>();
        report.put("patientsPerDoctor", reportRepository.getPatientsPerDoctor());
        report.put("consultationTime", reportRepository.getAverageConsultationTime());
        return report;
    }
}
